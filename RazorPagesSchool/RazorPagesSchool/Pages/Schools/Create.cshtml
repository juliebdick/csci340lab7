@page
@model RazorPagesSchool.Pages.Schools.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>School</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="School.SchoolName" class="control-label"></label>
                <input asp-for="School.SchoolName" class="form-control" />
                <span asp-validation-for="School.SchoolName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="School.Location" class="control-label"></label>
                <input asp-for="School.Location" class="form-control" />
                <span asp-validation-for="School.Location" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="School.MHA" /> @Html.DisplayNameFor(model => model.School.MHA)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="School.MSHCM" /> @Html.DisplayNameFor(model => model.School.MSHCM)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="School.Tuition" class="control-label"></label>
                <input asp-for="School.Tuition" class="form-control" />
                <span asp-validation-for="School.Tuition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
